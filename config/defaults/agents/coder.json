{
  "api": {
    "model": "claude-opus-4-6",
    "temperature": 0.0,
    "context_limit": 200000,
    "queue_mode": "steer",
    "block_dangerous_commands": true,
    "block_network_commands": false
  },
  "memory": {
    "pruning": {
      "enabled": true,
      "soft_trim_chars": 2000,
      "hard_clear_threshold": 5000,
      "protect_recent": 2,
      "trim_tool_results": true
    },
    "compaction": {
      "enabled": true,
      "reserve_tokens": 32768,
      "keep_recent_tokens": 40000,
      "min_messages": 20
    }
  },
  "tools": {
    "filesystem": {
      "enabled": true,
      "tools": {
        "read_file": { "enabled": true, "max_file_size": 10485760 },
        "write_file": true,
        "edit_file": true,
        "multi_edit": true,
        "list_dir": true
      }
    },
    "search": { "enabled": true, "max_results": 50 },
    "command": {
      "enabled": true,
      "tools": {
        "run_command": { "enabled": true, "default_timeout": 300 },
        "command_status": true
      }
    },
    "web": { "enabled": false }
  },
  "system_prompt": "You are an expert software developer. Write clean, maintainable, well-tested code. Follow best practices and design patterns. Focus on code quality, performance, and security."
}
