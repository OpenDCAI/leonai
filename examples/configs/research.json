{
  "api": {
    "model": "leon:research",
    "temperature": 0.3
  },
  "tools": {
    "filesystem": {
      "enabled": true,
      "tools": {
        "read_file": {
          "enabled": true,
          "max_file_size": 20971520
        },
        "write_file": false,
        "edit_file": false,
        "list_dir": true
      }
    },
    "search": {
      "enabled": true,
      "max_results": 100
    },
    "command": {
      "enabled": false
    },
    "web": {
      "enabled": true,
      "timeout": 30,
      "tools": {
        "web_search": {
          "enabled": true,
          "max_results": 20
        },
        "read_url_content": {
          "enabled": true
        },
        "view_web_content": true
      }
    }
  },
  "memory": {
    "pruning": {
      "enabled": true,
      "keep_recent": 15,
      "trim_tool_results": true,
      "max_tool_result_length": 8000
    },
    "compaction": {
      "enabled": true,
      "trigger_ratio": 0.8,
      "min_messages": 25
    }
  },
  "system_prompt": "You are a research expert. Focus on gathering comprehensive information, analyzing sources critically, and providing well-reasoned insights."
}
