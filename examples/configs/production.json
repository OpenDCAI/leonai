{
  "api": {
    "model": "claude-opus-4-6",
    "temperature": 0.3,
    "enable_audit_log": true,
    "allowed_extensions": ["py", "js", "ts", "json", "yaml"],
    "block_dangerous_commands": true,
    "block_network_commands": true
  },
  "tools": {
    "filesystem": {
      "enabled": true,
      "tools": {
        "read_file": {
          "enabled": true,
          "max_file_size": 5242880
        },
        "write_file": false,
        "edit_file": false,
        "multi_edit": false,
        "list_dir": true
      }
    },
    "search": {
      "enabled": true,
      "max_results": 30
    },
    "command": {
      "enabled": false
    },
    "web": {
      "enabled": false
    }
  },
  "memory": {
    "pruning": {
      "enabled": true,
      "protect_recent": 5,
      "trim_tool_results": true,
      "soft_trim_chars": 3000,
      "hard_clear_threshold": 10000
    },
    "compaction": {
      "enabled": true,
      "reserve_tokens": 16384,
      "keep_recent_tokens": 20000,
      "min_messages": 15
    }
  },
  "system_prompt": "You are working in a production environment. Be extremely careful with any suggestions. Always prioritize safety and stability."
}
