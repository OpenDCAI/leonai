{
  "api": {
    "model": "leon:coding",
    "temperature": 0.0,
    "allowed_extensions": ["py", "js", "ts", "jsx", "tsx", "json", "yaml", "md", "txt"],
    "enable_audit_log": true,
    "block_dangerous_commands": true
  },
  "tools": {
    "filesystem": {
      "enabled": true,
      "tools": {
        "read_file": {
          "enabled": true,
          "max_file_size": 10485760
        },
        "write_file": true,
        "edit_file": true,
        "multi_edit": true,
        "list_dir": true
      }
    },
    "search": {
      "enabled": true,
      "max_results": 50
    },
    "command": {
      "enabled": true,
      "tools": {
        "run_command": {
          "enabled": true,
          "default_timeout": 120
        },
        "command_status": true
      }
    },
    "web": {
      "enabled": false
    }
  },
  "memory": {
    "pruning": {
      "enabled": true,
      "protect_recent": 3,
      "trim_tool_results": true,
      "soft_trim_chars": 3000,
      "hard_clear_threshold": 10000
    },
    "compaction": {
      "enabled": true,
      "reserve_tokens": 16384,
      "keep_recent_tokens": 20000,
      "min_messages": 20
    }
  },
  "system_prompt": "You are a software development expert. Write clean, maintainable code following best practices."
}
